<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:pickerui="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"/>

    <Button
        android:id="@+id/bt_slide"
        android:text="@string/slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_below="@+id/bt_slide"
        android:weightSum="2"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/random_color"
                android:id="@+id/cb_random_color"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/items_clickables"
                android:id="@+id/cb_items_clickables"
                android:checked="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/use_blur"
                android:id="@+id/cb_use_blur"
                android:checked="true"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auto_dismiss"
                android:id="@+id/cb_auto_dismiss"
                android:checked="true"/>

        </LinearLayout>

    </LinearLayout>

    <com.dpizarro.uipicker.library.picker.PickerUI
        android:id="@+id/picker_ui_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        pickerui:p_backgroundColor="#4cffa5"
        pickerui:p_linesCenterColor="#3941ff"
        pickerui:p_autoDismiss="true"
        pickerui:p_itemsClickables="true"
        pickerui:p_entries="@array/months"
        pickerui:p_textCenterColor="#000000"
        pickerui:p_textNoCenterColor="#737373"
        pickerui:p_blur="true"
        pickerui:p_blur_downScaleFactor="@integer/blur_downscale_min"
        pickerui:p_blur_FilterColor="#ff5e48"
        pickerui:p_blur_radius="@integer/blur_radius_min"
        pickerui:p_blur_use_renderscript="true"/>

</RelativeLayout>
