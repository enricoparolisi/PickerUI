<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PickerUI">
        <!-- to use in PickerUI in the panel -->
        <attr name="p_backgroundColor"    format="color"/>
        <attr name="p_linesCenterColor"   format="color"/>

        <!-- to use in PickerUIListView -->
        <attr name="p_autoDismiss"        format="boolean"/>
        <attr name="p_itemsClickables"    format="boolean"/>
        <attr name="p_entries"            format="reference"/>

        <!-- to use in PickerUI in the PickerUIListView by PickerUIAdapter -->
        <attr name="p_textCenterColor"    format="color"/>
        <attr name="p_textNoCenterColor"  format="color"/>

        <!-- Blur Attributes -->
        <attr name="p_blur"                   format="boolean"/>
        <attr name="p_blur_downScaleFactor"   format="float"/>
        <attr name="p_blur_FilterColor"       format="color"/>
        <attr name="p_blur_radius"            format="integer"/>
        <attr name="p_blur_use_renderscript"  format="boolean"/>

    </declare-styleable>
</resources>